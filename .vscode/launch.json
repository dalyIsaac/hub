{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "edge",
      "request": "launch",
      "version": "canary",
      "name": "Launch Microsoft Edge (Chromium) against localhost",
      "url": "localhost:3000",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "windows": {
        "program": "{$env:APPDATA}/Local/Microsoft/Edge SxS/Application/msedge.exe"
      }
    },
    {
      "type": "edge",
      "request": "attach",
      "name": "Attach Microsoft Edge (Chromium) against localhost",
      "url": "localhost:3000",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "windows": {
        "program": "{$env:APPDATA}/Local/Microsoft/Edge SxS/Application/msedge.exe"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome against localhost",
      "port": 9222,
      "url": "localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
